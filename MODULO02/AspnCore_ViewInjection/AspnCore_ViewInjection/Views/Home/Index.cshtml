@{
    ViewData["Title"] = "Home Page";
}

@inject AspnCore_ViewInjection.Services.EstadosService estados
@inject AspnCore_ViewInjection.Services.TimesService times

<h1>ASP.NET Core - View Injection</h1>
<hr />
<h3>Lista de Times</h3>
<ul>
    @foreach(var nome in times.GetTimes())
    {
        <li>@nome</li>
    }
</ul>
<br />
<br />
Estado: @Html.DropDownList("Estado", 
       estados.GetEstados().Select(e=>new SelectListItem() { Text=e.Nome, Value=e.Sigla}))

<br />
<hr />