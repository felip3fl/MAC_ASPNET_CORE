@model IEnumerable<Mvc_EFCore2.Models.Aluno>

<h1>Informações de Alunos e taxa de desconto</h1>

@if (!Model.Any())
{
    <p>Nãi existem dados</p>
}
else
{
    <table class="table-bordered">
        <thead>
            <tr>Nome</tr>
            <tr>Taxa de desconto(%)</tr>
        </thead>
        <tbody>
            @foreach(var aluno in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>aluno.Nome)</td>
                    <td>@Html.DisplayFor(m=>aluno.TipoSocio.TaxaDesconto)</td>
                </tr>
            }
        </tbody>
    </table>
}
